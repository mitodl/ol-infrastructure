---
sources:
  collect_tika_logs:
    type: journald
    include_units:
    - java
    current_boot_only: true

transforms:
  parse_tika_logs:
    type: remap
    inputs:
    - 'collect_tika_logs'
    source: |
      event, err = parse_json(.message)
      if event != null {
        .,err = merge(., event)
        .environment = "${ENVIRONMENT}"
      }

  enrich_tika_logs:
    type: aws_ec2_metadata
    inputs:
    - 'parse_tika_logs'
    namespace: ec2

sinks:
  ship_tika_logs_to_grafana_cloud:
    inputs:
    - 'enrich_tika_logs'
    type: loki
    auth:
      strategy: basic
      password: ${GRAFANA_CLOUD_API_KEY}
      user: "${GRAFANA_CLOUD_LOKI_API_USER}"
    endpoint: https://logs-prod-us-central1.grafana.net
    encoding:
      codec: json
    labels:
      environment: ${ENVIRONMENT}
      application: tika
      service: tika
    out_of_order_action: rewrite_timestamp
