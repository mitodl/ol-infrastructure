VERSION={{ file "/etc/default/ovs-version" }}

{{ with secret "aws-mitx/creds/ovs-server" }}
AWS_ACCESS_KEY_ID={{ .Data.access_key }}
AWS_SECRET_ACCESS_KEY={{ .Data.secret_key }}
