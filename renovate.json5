{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>mitodl/.github:renovate-config"
  ],
  "packageRules": [
    {
      "groupName": "pulumi-plugins",
      "matchPackageNames": [
        "pulumi{/,}**"
      ]
    }
  ],
  "pip_requirements": {
    "fileMatch": "dockerfiles/openedx-edxapp/pip_package_lists/.*?/.*.txt"
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "versions.py"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?) packageName=(?<packageName>.*)\s+.*?\s*=\s*\"v?(?<currentValue>.*?)\""
      ]
    }
  ]
}
